---
import BaseLayout from "../../layouts/BaseLayout.astro";

const postList = await Astro.glob('../posts/*.md')
const tags = [...new Set(postList.map((post) => post.frontmatter.tags).flat())];

const pageTitle= "Tag Index";
const pageHeader = "Tags"
---

<BaseLayout pageTitle={pageTitle} page_header={pageHeader}>
  <div class="tags"> {tags.map(tag => <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>)}</div> 
</BaseLayout>

<style>
    a {
      color: #00539F;
    }
          
    .tags {
      display: flex; 
      flex-wrap: wrap; 
      margin: 0 auto;  
    }
  
    .tag {
      margin: 0.25em;
      border: dotted 1px #a1a1a1;
      border-radius: .5em;
      padding: .5em 1em;
      font-size: 1.15em;
      background-color: #F8FCFD;
    }
  </style>