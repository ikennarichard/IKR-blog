---
const { platform, username, image } = Astro.props;
---

<a href={`https://${platform}.com/${username}`} target="_blank"><img src={image} alt="" class={platform}></a>


<style>


img {
    width: 30px;
}

a {
    padding: 0.5rem .2rem;
    text-decoration: none;
    margin-left: 2px;
}

img:hover {
    scale: 1.2;
}


    
</style>